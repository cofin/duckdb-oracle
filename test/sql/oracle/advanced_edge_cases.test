SET oracle_metadata_object_types = 'TABLE,VIEW,SYNONYM,MATERIALIZED VIEW';
SET oracle_metadata_result_limit = 10000;
SET oracle_use_current_schema = true;

# Cleanup
statement ok
DROP SECRET oracle_edge_test;
